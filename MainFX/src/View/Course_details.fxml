<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true"
            hbarPolicy="NEVER"
            vbarPolicy="AS_NEEDED"
            style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.CourseDetailsController">

    <VBox spacing="0" style="-fx-background-color: #f5f5f5;" prefHeight="700">
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #262451; -fx-padding: 15 30;">
            <Button fx:id="backButton" onAction="#handleBack"
                    style="-fx-background-color: White;
                           -fx-text-fill: #262451;
                           -fx-font-weight: bold;
                           -fx-padding: 8 15;
                           -fx-background-radius: 5;"
                    text="â—„ Back" />

            <Region HBox.hgrow="ALWAYS" />

            <Label fx:id="titleLabel"
                   style="-fx-text-fill: white;
                          -fx-font-size: 22;
                          -fx-font-weight: bold;"
                   text="Course Details" />

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="downloadBtn" onAction="#handleDownloadAll"
                    style="-fx-background-color: White;
                           -fx-text-fill: #262451;
                           -fx-padding: 8 15;
                           -fx-background-radius: 5;"
                    text="â¬‡ Download All PDFs" />
        </HBox>

        <!-- Course Information -->
        <VBox style="-fx-background-color: white; -fx-padding: 25 40; -fx-spacing: 20;">
            <!-- Course Title -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label style="-fx-font-size: 40;
                             -fx-background-color: #eef;
                             -fx-padding: 15;
                             -fx-background-radius: 10;"
                       text="ðŸ“š" />

                <VBox spacing="5">
                    <Label fx:id="courseNameLabel"
                           style="-fx-font-size: 28;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #262451;"
                           text="Course Name" />
                    <Label fx:id="courseCodeLabel"
                           style="-fx-text-fill: #666666;
                                  -fx-font-size: 16;"
                           text="Course Code â€¢ Credits" />
                </VBox>
            </HBox>

            <!-- Course Details -->
            <GridPane hgap="20" vgap="10">
                <Label style="-fx-text-fill: #666666;"
                       text="Instructor:"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="0" />

                <Label fx:id="instructorLabel"
                       style="-fx-text-fill: #262451;
                              -fx-font-weight: bold;"
                       text="Instructor Name"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="0" />

                <Label style="-fx-text-fill: #666666;"
                       text="Room:"
                       GridPane.columnIndex="0"
                       GridPane.rowIndex="1" />

                <Label fx:id="roomLabel"
                       style="-fx-text-fill: #262451;
                              -fx-font-weight: bold;"
                       text="Room Number"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="1" />

                <Label style="-fx-text-fill: #666666;"
                       text="Schedule:"
                       GridPane.columnIndex="2"
                       GridPane.rowIndex="0" />

                <Label fx:id="scheduleLabel"
                       style="-fx-text-fill: #262451;
                              -fx-font-weight: bold;"
                       text="Class Schedule"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="0" />

                <Label style="-fx-text-fill: #666666;"
                       text="Status:"
                       GridPane.columnIndex="2"
                       GridPane.rowIndex="1" />

                <Label fx:id="statusLabel"
                       style="-fx-text-fill: #4CAF50;
                              -fx-font-weight: bold;"
                       text="Course Status"
                       GridPane.columnIndex="3"
                       GridPane.rowIndex="1" />

                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>
            </GridPane>

            <!-- Course Description (Ø§Ù„Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ø¬Ø¯ÙŠØ¯Ø©) -->
            <VBox spacing="8" style="-fx-padding: 20 0 0 0;">
                <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #262451;" text="Description" />
                <Label fx:id="descriptionLabel"
                       style="-fx-font-size: 15; -fx-text-fill: #64748b; -fx-wrap-text: true; -fx-padding: 15; -fx-background-color: #f8fafc; -fx-background-radius: 12;"
                       text="No description available." />
            </VBox>
        </VBox>

        <!-- Lectures Section -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20 40 30 40;">
            <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #262451;" text="Lectures and Materials" />

            <!-- Dynamic Lectures Container -->
            <VBox fx:id="lecturesContainer" spacing="10">
                <!-- Ø§Ù„Ù€ Lectures Ù‡ØªØªØ­Ø· Ù‡Ù†Ø§ ØªÙ„Ù‚Ø§Ø¦ÙŠ Ù…Ù† Ø§Ù„ÙƒÙˆØ¯ -->
            </VBox>

            <!-- Dynamic Statistics -->
            <HBox alignment="CENTER" spacing="30" style="-fx-padding: 20 0 0 0;">
                <VBox alignment="CENTER" spacing="5">
                    <Label style="-fx-text-fill: #666666;" text="Total Lectures" />
                    <Label fx:id="totalLecturesLabel" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #262451;" text="0" />
                </VBox>

                <VBox alignment="CENTER" spacing="5">
                    <Label style="-fx-text-fill: #666666;" text="PDF Files" />
                    <Label fx:id="pdfFilesLabel" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #262451;" text="0" />
                </VBox>

                <VBox alignment="CENTER" spacing="5">
                    <Label style="-fx-text-fill: #666666;" text="Total Size" />
                    <Label fx:id="totalSizeLabel" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #262451;" text="0 MB" />
                </VBox>
            </HBox>
        </VBox>
    </VBox>
</ScrollPane>