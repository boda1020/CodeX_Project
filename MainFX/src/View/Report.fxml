<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.ReportController"
            style="-fx-background-color: #f8fafc;">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #262451; -fx-padding: 20;">
            <Button fx:id="btnBack" onAction="#handleBack" text="â† Back to Dashboard"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;
                           -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 8; -fx-background-radius: 8;
                           -fx-padding: 10 20; -fx-cursor: hand;"/>

            <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label text="Reports"
                       style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;"/>
                <Label text="Generate and view academic reports"
                       style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14;"/>
            </VBox>

            <TextField fx:id="searchField" promptText="ðŸ” Search reports..."
                       prefWidth="250"
                       style="-fx-background-color: rgba(255,255,255,0.15); -fx-text-fill: white;
                              -fx-prompt-text-fill: rgba(255,255,255,0.6); -fx-background-radius: 8;
                              -fx-border-color: rgba(255,255,255,0.3); -fx-border-radius: 8; -fx-padding: 10 15;
                              -fx-font-size: 14;"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #f8fafc; -fx-background-color: #f8fafc;">
            <VBox spacing="25" style="-fx-padding: 30;">

                <!-- Generate Report Section -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25;">
                    <Label text="Generate Report" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #262451;"/>

                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <VBox spacing="5" HBox.hgrow="SOMETIMES">
                            <Label text="Report Type:" style="-fx-font-size: 14; -fx-text-fill: #262451;"/>
                            <ComboBox fx:id="reportTypeCombo" promptText="Select type"
                                      prefWidth="200"
                                      style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" HBox.hgrow="SOMETIMES">
                            <Label text="Semester:" style="-fx-font-size: 14; -fx-text-fill: #262451;"/>
                            <ComboBox fx:id="semesterCombo" promptText="Select semester"
                                      prefWidth="180"
                                      style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8;"/>
                        </VBox>
                    </HBox>

                    <Button fx:id="btnGenerate" onAction="#handleGenerateReport" text="Generate Report"
                            maxWidth="200"
                            style="-fx-background-color: #262451; -fx-text-fill: white; -fx-font-weight: bold;
                                   -fx-font-size: 14; -fx-background-radius: 8; -fx-padding: 12 30; -fx-cursor: hand;"/>
                </VBox>

                <!-- Quick Statistics -->
                <HBox spacing="15">
                    <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                          spacing="10" prefWidth="180" HBox.hgrow="ALWAYS">
                        <Label text="Total Students" style="-fx-font-size: 14; -fx-text-fill: #64748b;"/>
                        <Label fx:id="totalStudentsLabel" text="1,250"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #262451;"/>
                    </VBox>

                    <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                          spacing="10" prefWidth="180" HBox.hgrow="ALWAYS">
                        <Label text="Average GPA" style="-fx-font-size: 14; -fx-text-fill: #64748b;"/>
                        <Label fx:id="averageGPALabel" text="3.45"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #262451;"/>
                    </VBox>

                    <VBox style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);"
                          spacing="10" prefWidth="180" HBox.hgrow="ALWAYS">
                        <Label text="Success Rate" style="-fx-font-size: 14; -fx-text-fill: #64748b;"/>
                        <Label fx:id="successRateLabel" text="89.5%"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #262451;"/>
                    </VBox>
                </HBox>

                <!-- Report Preview -->
                <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25;">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Report Preview" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #262451;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnExportPDF" onAction="#handleExportReport" text="Export PDF"
                                style="-fx-background-color: #262451; -fx-text-fill: white; -fx-font-weight: bold;
                                       -fx-font-size: 12; -fx-background-radius: 6; -fx-padding: 8 15; -fx-cursor: hand;"/>
                        <Button fx:id="btnPrint" onAction="#handlePrint" text="Print"
                                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold;
                                       -fx-font-size: 12; -fx-background-radius: 6; -fx-padding: 8 15; -fx-cursor: hand;"/>
                    </HBox>

                    <TextArea fx:id="reportTextArea"
                              wrapText="true"
                              editable="false"
                              prefHeight="250"
                              style="-fx-control-inner-background: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8;
                                     -fx-background-radius: 8; -fx-font-size: 13; -fx-text-fill: #475569;"
                              promptText="Report will appear here..."/>
                </VBox>

                <!-- Quick Reports -->
                <VBox spacing="15">
                    <Label text="Quick Reports" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #262451;"/>

                    <HBox spacing="15">
                        <Button fx:id="btnStudentTranscript" text="ðŸ“„ Student Transcript"
                                prefWidth="180"
                                style="-fx-background-color: #262451; -fx-text-fill: white; -fx-font-weight: bold;
                                       -fx-font-size: 13; -fx-background-radius: 8; -fx-padding: 12 20; -fx-cursor: hand;"/>

                        <Button fx:id="btnClassPerformance" text="ðŸ“Š Class Performance"
                                prefWidth="180"
                                style="-fx-background-color: #262451; -fx-text-fill: white; -fx-font-weight: bold;
                                       -fx-font-size: 13; -fx-background-radius: 8; -fx-padding: 12 20; -fx-cursor: hand;"/>

                        <Button fx:id="btnDepartmentStats" text="ðŸ“ˆ Department Stats"
                                prefWidth="180"
                                style="-fx-background-color: #262451; -fx-text-fill: white; -fx-font-weight: bold;
                                       -fx-font-size: 13; -fx-background-radius: 8; -fx-padding: 12 20; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>